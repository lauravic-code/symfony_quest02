{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<h1></h1>
 {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.id }} - {{ program.title }} - Catégorie : {{ category.name }}</h2>
            <p>{{ program.synopsis }}</p>
        </div>
          <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
    {% else %}
        Aucune série trouvée.
    {% endfor %}


<img src="{{ asset('build/images/SecretCellarLogo.png') }}" alt=""/>

{% endblock %}